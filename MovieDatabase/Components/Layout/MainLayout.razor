@inherits LayoutComponentBase

<PageTitle>My Blazor App</PageTitle>

<!-- Top Navbar -->

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">MovieDatabase</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/search" Match="NavLinkMatch.All">Search</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/tv" Match="NavLinkMatch.All">TV</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/toprated" Match="NavLinkMatch.All">Top Rated</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>


<!-- Page Content -->
<div class="container mt-4">
    @Body
</div>

<!-- Error UI (optional) -->
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

